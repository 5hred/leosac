<?xml version="1.0"?>
<kernel>
    <plugin_directories>
        <plugindir>.</plugindir>
    </plugin_directories>

    <log>
        <enable_syslog>true</enable_syslog>
        <min_syslog>INFO</min_syslog>
    </log>

    <network>
        <enabled>false</enabled>
    </network>

    <modules>
        <module>
            <name>STDIN</name>
            <file>libstdin-controller.so</file>
            <level>40</level>
        </module>

        <module>
            <name>Instrumentation</name>
            <file>libintrumentation.so</file>
            <level>105</level>
            <module_config>
                <ipc_endpoint>/tmp/leosac-ipc</ipc_endpoint>
            </module_config>
        </module>

        <module>
            <name>MONITOR</name>
            <file>libmonitor.so</file>
            <level>1</level>

            <module_config>
                <file-bus>MY_LOGS.txt</file-bus>
                <verbose>true</verbose>
<!--                <ping>
                    <ip>8.8.8.8</ip>
                    <led>dummy</led>
                </ping>-->
            </module_config>
        </module>

        <module>
            <name>ResetWatcher</name>
            <file>libtest-and-reset.so</file>
            <level>101</level>
            <module_config>
                <devices>
                    <device>
                        <name>MY_WIEGAND_1</name>
                        <reset_card>40:a0:83:80</reset_card>
                    </device>
                </devices>
            </module_config>
        </module>
    </modules>
</kernel>