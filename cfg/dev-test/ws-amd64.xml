<?xml version="1.0"?>
<kernel>
    <instance_name>fixe</instance_name>
    <database>
      <type>pgsql</type>
      <username>leosac</username>
      <password>leosac</password>
      <dbname>leosac</dbname>
      <host>127.0.0.1</host>
    </database>

    <plugin_directories>
        <plugindir>.</plugindir>
    </plugin_directories>

    <network>
        <enabled>false</enabled>
    </network>

    <log>
      <enable_database>false</enable_database>
    </log>

    <modules>
        <module>
            <name>WEBSOCK_API</name>
            <file>libwebsock-api.so</file>
            <level>1</level>

            <module_config>
              <port>8888</port>
              <interface>10.2.1.5</interface>
            </module_config>
        </module>

        <module>
            <name>SMTP</name>
            <file>libsmtp.so</file>
            <level>2</level>

            <module_config>
              <use_database>true</use_database>
            </module_config>
        </module>

        <module>
            <name>EVOXS</name>
            <file>libevoxs.so</file>
            <level>3</level>
        </module>

    </modules>
</kernel>
