<root>
    <!--
    Maps WiegandCard to user
    -->
    <user_mapping>
        <map>
            <user>MY_USER</user>
            <WiegandCard>00:11:22:33</WiegandCard>
        </map>
        <map>
            <user>MY_USER</user>
            <WiegandCard>aa:bb:cc:dd</WiegandCard>
        </map>
        <map>
            <user>Toto</user>
            <WiegandCard>cc:dd:ee:ff</WiegandCard>
        </map>
    </user_mapping>

    <permissions>
        <map>
            <!-- Time frame mapping for MY_USER -->
            <user>MY_USER</user>

            <default_schedule>
                <!-- Has full access to all on monday and sunday -->
                <monday>
                    <start>00:00</start>
                    <end>23:59</end>
                </monday>

                <sunday>
                    <start>00:00</start>
                    <end>23:59</end>
                </sunday>
            </default_schedule>
        </map>
        <map>
            <!-- Time frame mapping for Toto -->
            <user>Toto</user>

            <default_schedule>
                <sunday>
                    <start>00:00</start>
                    <end>23:59</end>
                </sunday>
            </default_schedule>
        </map>
    </permissions>
</root>
